<html>

<head>
    <title>An Office 365 API Sample App Using Node-Express-Ejs</title>
    <style>
        body {
            padding-top: 20px;
            padding-left: 50px;
            padding-right: 50px
        }

        .rightAlign {
            text-align: right
        }

        .leftAlign {
            text-align: left
        }

        .centerAlign {
            text-align: center
        }
    </style>
</head>

<body class="centerAlign">
    <div name="banner">
        <h1>Office 365 API Tasks | Discovery</h1>
    </div>
    <div name="menu">
        <b>Discovery</b> |
        <a href="/">Home</a>
    </div>

    <div name="display">
        <H2>Service capabilities</H2>
        <% if (data) { %>
            <ul class="leftAlign">
                <h4>
                    <%= data %>
                </h4>
            </ul>
            <% } %>
    </div>
    <div>
            <%= JSON.stringify(k.keys, "\r\n", 4)%>
    </div>
    <div>
        <table border="1">
            <% for(var i=0; i<=k.keys.length;  i++) { %>
              <% for(var key in k.keys[i]) { %>
                    <tr>
                        <td>
                            <%= i %>
                        </td>
                        <td>
                            <%= k.keys[i][key] %>
                        </td>
                    </tr>
                    <% } %>
            <% } %>
        </table>
    </div>
</body>

</html>